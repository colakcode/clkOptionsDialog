<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/layoutAdd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    android:background="@color/transparent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            card_view:cardElevation="3dp"
            card_view:cardPreventCornerOverlap="false"
            android:layout_margin="5dp"
            app:ignore="NamespaceTypo"
            card_view:cardCornerRadius="20dp"
            android:id="@+id/cardView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textViewInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/tommy_soft_regular"
                    android:text=""
                    android:textColor="@color/grey_text" />

                <Button
                    android:id="@+id/buttonRight"
                    style="@style/DialogBottomButtonPositive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewInfo"
                    android:layout_marginTop="10dp"
                    android:text="" />

                <Button
                    android:id="@+id/buttonMiddle"
                    style="@style/DialogBottomButtonThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewInfo"
                    android:layout_marginTop="10dp"
                    android:text="" />

                <Button
                    android:id="@+id/buttonLeft"
                    style="@style/DialogBottomButtonNegative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewInfo"
                    android:layout_marginTop="10dp"
                    android:text="" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>




</RelativeLayout>

